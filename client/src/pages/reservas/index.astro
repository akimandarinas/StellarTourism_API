---
import Layout from '../../layouts/Layout.astro';
import ReservasList from '../../components/reservas/ReservasList.vue';
import ReservasFilter from '../../components/reservas/ReservasFilter.vue';
import AuthGuard from '../../components/auth/AuthGuard.vue';
---

<Layout 
  title="Mis Reservas" 
  description="Gestiona tus reservas de viajes espaciales con StellarTourism."
>
  <AuthGuard client:load>
    <div class="page-header">
      <h1>Mis Reservas</h1>
      <p>Gestiona tus viajes espaciales y actividades</p>
    </div>
    
    <div class="reservas-layout">
      <aside class="filter-sidebar">
        <ReservasFilter client:load />
      </aside>
      
      <main class="reservas-main">
        <ReservasList client:load />
      </main>
    </div>
  </AuthGuard>
</Layout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .page-header h1 {
    font-size: 3rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }
  
  .page-header p {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
  }
  
  .reservas-layout {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 2rem;
  }
  
  .filter-sidebar {
    background-color: var(--color-surface);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    height: fit-content;
    position: sticky;
    top: 100px;
  }
  
  @media (max-width: 768px) {
    .reservas-layout {
      grid-template-columns: 1fr;
    }
    
    .filter-sidebar {
      position: static;
      margin-bottom: 2rem;
    }
  }
</style>
