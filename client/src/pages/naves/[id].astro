---
import Layout from "../../layouts/Layout.astro";
import DetalleNavePage from "../../views/DetalleNavePage.vue";

// Obtener parámetros de la ruta
const { id } = Astro.params;

// Datos para SEO
const title = `Nave Espacial | StellarTourism`;
const description = `Explora los detalles de esta nave espacial y descubre sus características, especificaciones y destinos disponibles.`;
---

<Layout title={title} description={description}>
  <DetalleNavePage client:load naveId={id} />
</Layout>
