---
import Layout from '../../layouts/Layout.astro';
import Icon from '../../components/ui/Icon.vue';
---

<Layout 
  title="Nueva Reserva | Stellar Tourism" 
  description="Crea una nueva reserva para tu próximo viaje espacial"
>
  <div class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-2 gradient-text">Nueva Reserva</h1>
      <p class="text-gray-600">Completa el formulario para reservar tu próxima aventura espacial</p>
    </div>
    
    <!-- Formulario básico HTML sin componentes Vue -->
    <div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md">
      <form id="reserva-form" class="space-y-6">
        <div>
          <label for="destino" class="block text-sm font-medium text-gray-700 mb-1">Destino</label>
          <select id="destino" name="destino" class="w-full p-2 border border-gray-300 rounded-md">
            <option value="">Selecciona un destino</option>
            <option value="luna">Luna</option>
            <option value="marte">Marte</option>
            <option value="estacion-orbital">Estación Orbital</option>
          </select>
        </div>
        
        <div>
          <label for="fecha" class="block text-sm font-medium text-gray-700 mb-1">Fecha de viaje</label>
          <input type="date" id="fecha" name="fecha" class="w-full p-2 border border-gray-300 rounded-md">
        </div>
        
        <div>
          <label for="pasajeros" class="block text-sm font-medium text-gray-700 mb-1">Número de pasajeros</label>
          <input type="number" id="pasajeros" name="pasajeros" min="1" max="10" value="1" class="w-full p-2 border border-gray-300 rounded-md">
        </div>
        
        <div>
          <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">
            Continuar con la reserva
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('reserva-form');
    
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const destino = document.getElementById('destino').value;
      const fecha = document.getElementById('fecha').value;
      const pasajeros = document.getElementById('pasajeros').value;
      
      if (!destino || !fecha) {
        alert('Por favor, completa todos los campos obligatorios');
        return;
      }
      alert(`Reserva iniciada para ${destino} el ${fecha} con ${pasajeros} pasajeros`);
      
    });
  });
</script>

<style>
  .gradient-text {
    background: linear-gradient(to right, #7c3aed, #6d28d9);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  /* Estilos para el input de tipo date */
  input[type="date"] {
    color-scheme: light;
  }
</style>
